from flask import Flask, request
import os
import requests
import json

app = Flask(__name__)

BOT_TOKEN = os.environ.get('BOT_TOKEN')
CHAT_ID = os.environ.get('CHAT_ID')

@app.route('/', methods=['POST'])
def tinkoff_webhook():
    data = request.get_json()

    if not data:
        return 'No data', 400

    # üîπ –í–†–ï–ú–ï–ù–ù–û: –æ—Ç–ø—Ä–∞–≤–∏–º –ø–æ–ª–Ω—ã–π JSON –≤ Telegram
    debug_message = f"üì¶ –î–∞–Ω–Ω—ã–µ –æ—Ç –¢–∏–Ω—å–∫–æ—Ñ—Ñ:\n```json\n{json.dumps(data, indent=2, ensure_ascii=False)}\n```"
    requests.post(
        f"https://api.telegram.org/bot{BOT_TOKEN}/sendMessage",
        data={'chat_id': CHAT_ID, 'text': debug_message, 'parse_mode': 'Markdown'}
    )

    # –î–∞–ª–µ–µ –æ–±—ã—á–Ω–∞—è –ª–æ–≥–∏–∫–∞
    order_id = data.get('OrderId', '–Ω–µ —É–∫–∞–∑–∞–Ω')
    amount = data.get('Amount', 0) / 100
    email = data.get('Email', '–Ω–µ —É–∫–∞–∑–∞–Ω')
    status = data.get('Status', 'UNKNOWN')
    success = data.get('Success', None)

    if success is True:
        message = (
            f"‚úÖ –û–ø–ª–∞—Ç–∞ –ø—Ä–æ—à–ª–∞ —É—Å–ø–µ—à–Ω–æ!\n"
            f"üßæ –ó–∞–∫–∞–∑: {order_id}\n"
            f"üí≥ –°—É–º–º–∞: {amount} ‚ÇΩ\n"
            f"üìß Email: {email}"
        )
    else:
        reason = data.get('Message') or data.get('Details') or "–ü—Ä–∏—á–∏–Ω–∞ –Ω–µ —É–∫–∞–∑–∞–Ω–∞"
        message = (
            f"‚ùå –û–ø–ª–∞—Ç–∞ –Ω–µ –ø—Ä–æ—à–ª–∞ –∏–ª–∏ –æ—Ç–º–µ–Ω–µ–Ω–∞!\n"
            f"üßæ –ó–∞–∫–∞–∑: {order_id}\n"
            f"üí≥ –°—É–º–º–∞: {amount} ‚ÇΩ\n"
            f"üìß Email: {email}\n"
            f"üìå –°—Ç–∞—Ç—É—Å: {status}\n"
            f"‚ö†Ô∏è –ü—Ä–∏—á–∏–Ω–∞: {reason}"
        )

    requests.post(
        f"https://api.telegram.org/bot{BOT_TOKEN}/sendMessage",
        data={'chat_id': CHAT_ID, 'text': message, 'parse_mode': 'Markdown'}
    )

    return 'OK', 200

if __name__ == "__main__":
    app.run(host='0.0.0.0', port=int(os.environ.get('PORT', 8080)))
